<div class="block">
  <div class="content">
    <h2> Login </h2>
    <div class="clear"></div>
    <% form_for @user_session, :url => user_session_path do |f| %>
      <div class="group">
        <%= f.label :user %>
        <%= f.text_field :login %>
      </div>
      <div class="group">
        <%= f.label :pass %>
        <%= f.password_field :password %>
      </div>
      <div class="group">
        <%= f.check_box 'remember_me' %>
        <%= f.label "Lembrar?" %>
        <p align="right">
          <%= f.submit 'Entrar' %>
        </p>
      </div>
    <% end %>
  </div>
</div>
