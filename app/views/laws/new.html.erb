<h1>New law</h1>

<% form_for(@law) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :wrote_at %><br />
    <%= f.datetime_select :wrote_at %>
  </p>
  <p>
    <%= f.label :valid_at %><br />
    <%= f.datetime_select :valid_at %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', laws_path %>